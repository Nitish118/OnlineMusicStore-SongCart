@model OnlineMusicStore.Models.User
@{
    ViewBag.Title = "Edit Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="mb-4">
    <h2 class="premium-title">Edit Your Profile</h2>
    <p class="text-secondary mb-4">Update your personal information and preferences.</p>
</div>
<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="premium-card p-4">
            @using (Html.BeginForm("UpdateProfile", "User", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="row mb-3">
                    <div class="col-md-6 mb-3 mb-md-0">
                        <label for="Username" class="form-label">Username</label>
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control form-control-premium", style = "width:100%" })
                    </div>
                    <div class="col-md-6">
                        <label for="Email" class="form-label">Email</label>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-premium", style = "width:100%" })
                    </div>
                </div>
                <div class="mb-3">
                    <label for="Password" class="form-label">New Password</label>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-premium", placeholder = "Leave blank to keep current password", style = "width:100%" })
                </div>
                <div class="mb-3">
                    <label for="Address" class="form-label">Address</label>
                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control form-control-premium", style = "width:100%" })
                </div>
                <div class="mb-4">
                    <label for="PaymentMethod" class="form-label">Payment Method</label>
                    @Html.DropDownListFor(m => m.PaymentMethod, new List<SelectListItem> {
                        new SelectListItem { Text = "Credit Card", Value = "CreditCard" },
                        new SelectListItem { Text = "Debit Card", Value = "DebitCard" },
                        new SelectListItem { Text = "UPI", Value = "UPI" }
                    }, new { @class = "form-select form-control-premium", style = "width:100%; background-color: var(--dark-input); color: var(--text-primary); border: 1px solid rgba(255, 255, 255, 0.1);" })
                </div>
                <div class="d-flex justify-content-between mt-4">
                    <a href="@Url.Action("UserProfile", "User")"
                       class="btn btn-premium-sm"
                       style="background-color: var(--dark-card-hover); color: #f2f2f2;"
                       onmouseover="this.style.outline='2px solid #f2f2f2'; this.style.outlineOffset='2px';"
                       onmouseout="this.style.outline='none'; this.style.outlineOffset='0';">
                        <i class="fas fa-arrow-left me-2"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-premium">
                        <i class="fas fa-save me-2"></i> Update Profile
                    </button>
                </div>
            }
        </div>
    </div>
</div>