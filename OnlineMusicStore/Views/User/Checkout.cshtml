@model OnlineMusicStore.Models.Order

@{
    ViewBag.Title = "Order Confirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .text-muted-custom {
        color: #b0b0b0 !important;
        transition: none;
    }

        .text-muted-custom:hover {
            color: #ffffff !important;
            text-shadow: 0 0 5px rgba(255, 255, 255, 0.5);
        }
</style>

<h2 class="premium-title">Order Confirmation</h2>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="premium-card p-4">
            <div class="text-center mb-4">
                <i class="fas fa-check-circle text-success fa-4x mb-3"></i>
                <div class="alert alert-success">
                    @ViewBag.Message
                </div>
            </div>

            <div class="card mb-4" style="background-color: var(--dark-card-hover); border: 1px solid rgba(255, 255, 255, 0.05);">
                <div class="card-header" style="background-color: rgba(3, 218, 198, 0.1); border-bottom: 1px solid rgba(255, 255, 255, 0.05);">
                    <h5 class="mb-0 text-muted-custom">Order Details</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-2">
                        <div class="col-md-4 text-secondary">Order Number:</div>
                        <div class="col-md-8 text-muted-custom">#@Model.Id</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-md-4 text-secondary">Order Date:</div>
                        <div class="col-md-8 text-muted-custom">@Model.OrderDate.ToString("MMMM dd, yyyy")</div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 text-secondary">Total Amount:</div>
                        <div class="col-md-8 text-muted-custom">₹@Model.TotalAmount</div>
                    </div>
                </div>
            </div>

            <div class="text-center mt-4">
                <a href="@Url.Action("BrowseSongsByGenre", "User")" class="btn btn-premium">
                    <i class="fas fa-shopping-bag me-2"></i>Continue Shopping
                </a>
            </div>
        </div>
    </div>
</div>
