@model OnlineMusicStore.Models.ContactMessage
@{
    ViewBag.Title = "Contact Us";
}

<div class="contact-page">
    <div class="row">
        <div class="col-lg-6">
            <h2 class="premium-title mb-4">Get in Touch</h2>
            <p class="text-light-muted mb-4">Have questions or feedback? We'd love to hear from you. Fill out the form and our team will get back to you shortly.</p>

            <div class="contact-info mb-5">
                <div class="contact-info-item d-flex align-items-center mb-4">
                    <div class="icon-circle me-3">
                        <i class="fas fa-map-marker-alt"></i>
                    </div>
                    <div>
                        <h6 class="mb-1">Our Address</h6>
                        <p class="mb-0 text-light-muted">123 Music Avenue, Rhythm City</p>
                    </div>
                </div>

                <div class="contact-info-item d-flex align-items-center mb-4">
                    <div class="icon-circle me-3">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <div>
                        <h6 class="mb-1">Email Us</h6>
                        <p class="mb-0 text-light-muted">support@songcart.com</p>
                    </div>
                </div>

                <div class="contact-info-item d-flex align-items-center mb-4">
                    <div class="icon-circle me-3">
                        <i class="fas fa-phone-alt"></i>
                    </div>
                    <div>
                        <h6 class="mb-1">Call Us</h6>
                        <p class="mb-0 text-light-muted">+1 (555) 123-4567</p>
                    </div>
                </div>

                <div class="social-links mt-5">
                    <h6 class="mb-3">Follow Us</h6>
                    <div class="d-flex gap-3">
                        <a href="#" class="social-icon">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-instagram"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-spotify"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="contact-form-container">
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-success bg-success bg-opacity-10 text-success border-0">
                        <i class="fas fa-check-circle me-2"></i> @ViewBag.Message
                    </div>
                }

                @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { @class = "needs-validation contact-form", novalidate = "novalidate" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group mb-4">
                        @Html.LabelFor(m => m.Name, new { @class = "form-label" })
                        <div class="input-group">
                            <span class="input-group-text bg-transparent border-end-0">
                                <i class="fas fa-user text-secondary"></i>
                            </span>
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control form-control-premium border-start-0", placeholder = "Your name" })
                        </div>
                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger mt-1" })
                    </div>

                    <div class="form-group mb-4">
                        @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                        <div class="input-group">
                            <span class="input-group-text bg-transparent border-end-0">
                                <i class="fas fa-envelope text-secondary"></i>
                            </span>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-premium border-start-0", placeholder = "Your email address" })
                        </div>
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger mt-1" })
                    </div>

                    <div class="form-group mb-4">
                        @Html.LabelFor(m => m.Subject, new { @class = "form-label" })
                        <div class="input-group">
                            <span class="input-group-text bg-transparent border-end-0">
                                <i class="fas fa-tag text-secondary"></i>
                            </span>
                            @Html.TextBoxFor(m => m.Subject, new { @class = "form-control form-control-premium border-start-0", placeholder = "Subject" })
                        </div>
                        @Html.ValidationMessageFor(m => m.Subject, "", new { @class = "text-danger mt-1" })
                    </div>

                    <div class="form-group mb-5">
                        @Html.LabelFor(m => m.Message, new { @class = "form-label" })
                        <div class="input-group">
                            <span class="input-group-text bg-transparent border-end-0">
                                <i class="fas fa-comment-alt text-secondary"></i>
                            </span>
                            @Html.TextAreaFor(m => m.Message, new { @class = "form-control form-control-premium border-start-0", rows = "5", placeholder = "Your message" })
                        </div>
                        @Html.ValidationMessageFor(m => m.Message, "", new { @class = "text-danger mt-1" })
                    </div>

                    <button type="submit" class="btn btn-premium px-5 py-2">
                        <i class="fas fa-paper-plane me-2"></i> Send Message
                    </button>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .contact-page {
        padding: 1rem 0;
    }

    .text-light-muted {
        color: #b3b3b3;
    }

    .icon-circle {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        background: linear-gradient(45deg, rgba(138, 43, 226, 0.2), rgba(255, 107, 107, 0.2));
        display: flex;
        align-items: center;
        justify-content: center;
        color: #bb86fc;
        font-size: 1.2rem;
        transition: all 0.3s ease;
    }

    .contact-info-item:hover .icon-circle {
        transform: scale(1.1);
        background: linear-gradient(45deg, rgba(138, 43, 226, 0.3), rgba(255, 107, 107, 0.3));
    }

    .contact-info-item h6 {
        font-weight: 600;
        color: #ffffff;
    }

    .social-icon {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: #1e1e1e;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #b3b3b3;
        font-size: 1rem;
        transition: all 0.3s ease;
        border: 1px solid rgba(255, 255, 255, 0.05);
    }

        .social-icon:hover {
            background: linear-gradient(45deg, #8a2be2, #ff6b6b);
            color: #ffffff;
            transform: translateY(-3px);
        }

    .contact-form-container {
        background-color: rgba(30, 30, 30, 0.5);
        border-radius: 12px;
        padding: 2rem;
        border: 1px solid rgba(255, 255, 255, 0.05);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
    }

    .input-group-text {
        border-color: rgba(255, 255, 255, 0.1);
    }

    .form-label {
        color: #b3b3b3;
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    .alert-success {
        border-radius: 8px;
        padding: 1rem;
        margin-bottom: 1.5rem;
    }
</style>